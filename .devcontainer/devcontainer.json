{
    // Nombre descriptivo del entorno en el panel de Codespaces
    "name": "Python 3.12 Oracle Project",

    // Se especifica 'bookworm' para evitar la distribución inestable 'trixie'
    "image": "mcr.microsoft.com/devcontainers/python:3.12-bookworm",
    
    // Habilita el uso de comandos Docker dentro de Codespaces
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:1": {
            "version": "latest",
            "moby": false // Evita conflictos con el repositorio de Microsoft Moby
        }
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "njpwerner.autodocstring",
                "ms-azuretools.vscode-docker" // Extensión vital para gestionar tus contenedores visualmente
            ],
            "settings": {
                "python.defaultInterpreterPath": "{workspaceFolder}/.venv/bin/python",
                "python.terminal.activateEnvInSelectedInterpreter": true,
                "python.analysis.extraPaths": ["{workspaceFolder}/app"]
            }
        }
    },

    // El postCreateCommand ahora incluye permisos si fueran necesarios
    "postCreateCommand": "python -m venv .venv && .venv/bin/python -m pip install -r requirements.txt",

    "containerEnv": {
        "PYTHONPATH": "${containerWorkspaceFolder}"
    },

    // Define el usuario por defecto para evitar problemas de permisos con el socket de Docker
    "remoteUser": "vscode"
}